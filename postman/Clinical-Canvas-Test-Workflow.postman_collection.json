        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"sarah.wilson@hospital.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/{{api_version}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["{{api_version}}", "auth", "login"]
