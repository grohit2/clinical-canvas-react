# API Configuration
# Base URL for your backend API
VITE_API_BASE_URL=http://localhost:3001/api

# Feature flags to enable/disable API calls
# Set to 'true' to use real API endpoints, 'false' to use mock data
VITE_USE_REAL_API=false

# Individual API endpoint flags (all default to true if USE_REAL_API is true)
VITE_ENABLE_AUTH_API=false
VITE_ENABLE_PATIENTS_API=false
VITE_ENABLE_TASKS_API=false
VITE_ENABLE_DASHBOARD_API=false

# Example for production:
# VITE_API_BASE_URL=https://your-backend-api.com/api
# VITE_USE_REAL_API=true