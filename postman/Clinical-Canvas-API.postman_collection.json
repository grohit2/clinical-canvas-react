    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-refresh token if expired",
          "const token = pm.environment.get('auth_token');",
          "if (!token) {",
          "    console.log('No auth token found. Please login first.');",
          "}"
        ]
      }
    }
